<% include header %>
<% include ../templates/navigation %>

<% var affiliate = locals.data.components.affiliate; %>

<input type="hidden" value="<%= affiliate.image %>" id="header.image">



<section>
    <div class="container">
        <div class="row" style="height: auto; padding: 32px 0px;">
            <div class="col-lg-12">
                <h1 class="text-center"><%= affiliate.header %></h1>
                <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons text-center">
                        <li>
                            <a href="<%= data.meta.social.twitter %>" class="btn btn-info btn-sm"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
                        </li>
                        <li>
                            <a href="<%= data.meta.social.facebook %>" class="btn btn-primary btn-sm"><i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span></a>
                        </li>
                        <li>
                            <a href="<%= data.meta.social.google %>" class="btn btn-danger btn-sm"><i class="fa fa-google-plus fa-fw"></i> <span class="network-name">Google</span></a>
                        </li>
                    </ul>
            </div>
        </div>
    </div>
</section>


<section class="what-do-we-do" id="what-do-we-do">
    <div class="container">
        <div class="col-lg-12 text-center">
            <p class="lead"><%= affiliate.leadparagraph %></p>
            <p class=""><%= affiliate.body %></p>
        </div>
        
        <% include ../components/share %>
    </div>
</section>

<section>
    <div class="container">
        code:
        <%- affiliate.htmlcode %>
    </div>
</section>


<% include ../templates/footer %>