    <!-- Services Section -->
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading"><%= services.title %></h2>
                    <h3 class="section-subheading text-muted"><%= services.subtitle %></h3>
                </div>
            </div>
            <div class="row text-center">
                
                <% 
                    var width = "col-md-4";
                    switch(services.items.length) {
                        case 1:
                            width = "col-offset-md-2 col-md-8";
                            break;
                        case 2:
                            width = "col-md-6";
                            break;
                        case 3: 
                            width = "col-md-4"
                            break;
                        default:
                            width = "col-md-3";
                            break;
                    }
                    for(i in services.items) {
                    var item = services.items[i];
                    %>
                    <div class="<%= width %>">
                        <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-<%= item.icon %> fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading"><%= item.title %></h4>
                    <p class="text-muted"><%= item.text %></p>   
                    </div>
                    
                    
                <% } %>
 
            </div>
        </div>
    </section>